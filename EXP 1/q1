#include <stdio.h>

int main() {
    int a[10],n,sum=0,i;
    float avg;
    printf("enter the no of elements:");
    scanf("%d",&n);
    printf("enter the elements:");
    for(i=0;i<n;i++){
    scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++){
    sum+=a[i];
    }
    avg=sum/n;
    printf("%2f",avg);
    return 0;
}
