#include <stdio.h>
int main() {
    int key,i,n,arr[50];
    printf("enter the no .of elements in array:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
      printf("enter the array element %d:",i+1);
      scanf("%d",&arr[i]);
    }
    printf("enter the search key:");
    scanf("%d",&key);
    for(i=0;i<n;i++)
    {
        if(arr[i]==key)
        {
            printf("the elmenent is found at %d position",i+1);
            break;
        }
    }
    if(i==n)
    {
        printf("element not found");
    }
    return 0;
}
